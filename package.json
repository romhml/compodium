{
  "name": "compodium",
  "version": "0.0.1-alpha.1",
  "description": "A plug an play component playground for Nuxt.",
  "repository": "romhml/compodium",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types.d.ts",
      "import": "./dist/module.mjs",
      "require": "./dist/module.cjs"
    }
  },
  "main": "./dist/module.cjs",
  "types": "./dist/types.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepack": "nuxt-module-build build",
    "dev": "COMPODIUM_LOCAL=true nuxi dev playground",
    "dev:build": "nuxi build playground",
    "dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare && nuxi prepare playground",
    "release": "npm run lint && npm run test && npm run prepack && changelogen --release && npm publish && git push --follow-tags",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "typecheck": "vue-tsc --noEmit && nuxi typecheck devtools && nuxi typecheck playground"
  },
  "dependencies": {
    "@nuxt/kit": "^3.15.4",
    "@vueuse/core": "^12.5.0",
    "sirv": "^3.0.0",
    "vue-component-meta": "^2.2.0"
  },
  "devDependencies": {
    "@nuxt/devtools": "^2.0.0",
    "@nuxt/eslint-config": "^1.0.1",
    "@nuxt/module-builder": "^0.8.4",
    "@nuxt/schema": "^3.15.4",
    "@nuxt/test-utils": "^3.15.4",
    "@types/node": "latest",
    "changelogen": "^0.5.7",
    "eslint": "^9.19.0",
    "happy-dom": "^17.0.0",
    "nuxt": "^3.15.4",
    "playwright-core": "^1.50.1",
    "typescript": "~5.7.3",
    "vitest": "^3.0.5",
    "vue-tsc": "^2.2.0"
  },
  "resolutions": {
    "vite": "6.0.11",
    "rollup": "^4.24.0"
  },
  "packageManager": "pnpm@9.15.4+sha512.b2dc20e2fc72b3e18848459b37359a32064663e5627a51e4c74b2c29dd8e8e0491483c3abb40789cfd578bf362fb6ba8261b05f0387d76792ed6e23ea3b1b6a0",
  "keywords": [
    "nuxt",
    "components",
    "documentation"
  ]
}
