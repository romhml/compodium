{
  "name": "@compodium/vue",
  "type": "module",
  "version": "0.1.0",
  "description": "A plug and play component playground for Vue and Nuxt.",
  "license": "MIT",
  "repository": {
    "url": "romhml/compodium",
    "directory": "packages/vue"
  },
  "keywords": [
    "nuxt",
    "components",
    "documentation"
  ],
  "exports": {
    ".": "./dist/index.mjs",
    "./*": "./dist/*"
  },
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev:prepare": "unbuild",
    "prepack": "unbuild",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "vite": ">=3"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    }
  },
  "dependencies": {
    "@compodium/core": "workspace:*",
    "@vue/devtools-api": "^7.7.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "typescript": "^5.7.3",
    "unbuild": "^3.5.0",
    "vite": "^6.1.0",
    "vitest": "^3.0.5"
  }
}
