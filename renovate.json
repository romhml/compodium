{
  "extends": [
    "github>nuxt/renovate-config-nuxt"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "ignoreDeps": [
    "happy-dom",
    "typescript",
    "vue-tsc",
    "tailwindcss",
    "@tailwindcss/vite"
  ],
  "postUpdateOptions": ["pnpmDedupe"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "matchDepTypes": ["peerDependencies"],
      "enabled": false
    }
  ]
}
